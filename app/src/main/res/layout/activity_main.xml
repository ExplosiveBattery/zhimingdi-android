<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.hellovega.zhimingdi.ui.activity.MainActivity"
    tools:ignore="ContentDescription"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpaper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </android.support.v4.view.ViewPager>
        <ImageButton
            android:id="@+id/drawerLayoutButton"
            android:background="@drawable/ic_account_circle_white_24dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="start|top"
            android:layout_margin="15dp" />
        <TextView
            android:id="@+id/back_to_today"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:text="@string/back_to_today"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="top|center"
            android:background="@drawable/button_selector"
            android:visibility="invisible"
            />
        <ImageButton
            android:id="@+id/qqShareButton"
            android:background="@drawable/qqzone_share"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end|top"
            android:layout_margin="15dp"
            android:visibility="invisible"
            />
        <ImageButton
            android:id="@+id/wechatShareButton"
            android:background="@drawable/wechat_share"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end|top"
            android:layout_margin="15dp"
            android:visibility="invisible"
            />
        <ImageButton
            android:id="@+id/weiboShareButton"
            android:background="@drawable/weibo_share"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end|top"
            android:layout_margin="15dp"
            android:visibility="invisible"
            />
        <ImageButton
            android:id="@+id/shareButton"
            android:background="@drawable/ic_share_white_24dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end|top"
            android:layout_margin="15dp"
            />

    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">
        <include layout="@layout/widget_drawer"/>
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>